{
  "name": "@albus/monorepo",
  "version": "0.0.0",
  "license": "AGPL-3.0",
  "packageManager": "pnpm@8.6.2",
  "private": true,
  "scripts": {
    "sdk:gen": "pnpm -F @albus/sdk run generate && pnpm run lint:fix",
    "cli": "pnpm -F @albus/cli run cli",
    "test": "pnpm -F @albus/tests run test",
    "lint:fix": "eslint --fix --ext .js,.vue,.ts ./packages"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.39.5",
    "@types/node": "^18.16.3",
    "eslint": "^8.42.0",
    "typescript": "^4.9.5",
    "vite": "^4.3.9",
    "unbuild": "^1.2.1"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@solana/web3.js"
      ]
    }
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,tsx,vue,md}": [
      "eslint --cache --fix"
    ]
  }
}
