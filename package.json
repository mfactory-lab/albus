{
  "name": "@albus/monorepo",
  "version": "0.0.0",
  "license": "AGPL-3.0",
  "packageManager": "pnpm@8.6.2",
  "private": true,
  "engines": {
    "node": ">=16",
    "pnpm": ">=8"
  },
  "scripts": {
    "cli": "pnpm -F @mfactory-lab/albus-cli run cli",
    "cli:run": "pnpm -F @mfactory-lab/albus-cli run run",
    "dev": "NODE_OPTIONS=\"--max-old-space-size=8192\" pnpm -r --parallel --filter='./packages/**' run dev",
    "ui:dev": "pnpm -F @albus/ui serve",
    "gen:sdk": "pnpm -F @mfactory-lab/albus-sdk generate && eslint --fix --ext .ts ./packages/albus-sdk",
    "build:core": "pnpm -F @mfactory-lab/albus-core build",
    "build:sdk": "pnpm -F @mfactory-lab/albus-sdk build",
    "build:cli": "pnpm -F @mfactory-lab/albus-cli build",
    "release:core": "pnpm -F @mfactory-lab/albus-core release",
    "release:sdk": "pnpm -F @mfactory-lab/albus-sdk release",
    "test:unit": "vitest --dir ./packages",
    "test:e2e": "pnpm -F @albus/tests run test",
    "lint:fix": "eslint --fix --ext .js,.vue,.ts ./packages",
    "changeset": "changeset",
    "commit": "git-cz"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.41.2",
    "@changesets/cli": "^2.26.0",
    "@esbuild-plugins/node-globals-polyfill": "^0.2.3",
    "@release-it/bumper": "^5.1.0",
    "@rollup/plugin-inject": "^5.0.3",
    "@types/node": "^20.0.0",
    "@vitest/ui": "^0.34.4",
    "@vitest/web-worker": "^0.34.4",
    "buffer": "^6.0.3",
    "eslint": "^8.49.0",
    "release-it": "^16.1.5",
    "typescript": "5.0.4",
    "vite": "^4.4.9",
    "vite-plugin-dts": "^3.5.3",
    "vitest": "0.34.3"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@babel/runtime",
        "@solana/web3.js",
        "react",
        "react-native",
        "react-dom",
        "rollup",
        "snarkjs"
      ]
    }
  },
  "release-it": {
    "git": {
      "requireCleanWorkingDir": false
    },
    "github": {
      "release": true,
      "comments": {
        "submit": true
      }
    }
  }
}
