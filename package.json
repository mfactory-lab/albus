{
  "private": true,
  "type": "module",
  "license": "AGPL-3.0",
  "scripts": {
    "cli": "node ./packages/albus-cli/dist/index.mjs",
    "cli:run": "pnpm -F @albus-finance/cli run run",
    "dev": "pnpm -r --parallel --filter=./packages/** run dev",
    "docs": "docsify serve ./docs",
    "release:core": "pnpm -F @albus-finance/core release",
    "release:sdk": "pnpm -F @albus-finance/sdk release",
    "release:swap": "pnpm -F @albus-finance/swap-sdk release",
    "release:transfer": "pnpm -F @albus-finance/transfer-sdk release",
    "test:e2e": "pnpm -F @albus/tests run test",
    "test:unit": "vitest --dir ./packages",
    "lint:fix": "eslint --fix ./packages",
    "commit": "git-cz",
    "syncpack": "syncpack fix-mismatches"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.9.0",
    "@rollup/plugin-inject": "^5.0.5",
    "@types/node": "^20.0.0",
    "@vitest/ui": "^1.4.0",
    "buffer": "^6.0.3",
    "docsify-cli": "^4.4.4",
    "eslint": "8.55.0",
    "syncpack": "^12.3.0",
    "typescript": "5.4.2",
    "vite": "^5.2.2",
    "vite-plugin-dts": "3.6.4",
    "vite-plugin-node-polyfills": "^0.21.0",
    "vitest": "^1.4.0"
  },
  "resolutions": {
    "circom_tester": "0.0.20",
    "ffjavascript": "0.2.63"
  },
  "packageManager": "pnpm@8.14.2",
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@babel/runtime",
        "@solana/web3.js",
        "react",
        "react-native",
        "react-dom",
        "rollup",
        "esbuild",
        "snarkjs"
      ]
    }
  }
}
