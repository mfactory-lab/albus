{
  "private": true,
  "packageManager": "pnpm@9.1.0",
  "license": "AGPL-3.0",
  "workspaces": ["packages/*"],
  "scripts": {
    "dev": "pnpm --parallel --filter=./packages/** run dev",
    "circuits": "pnpm -F circuits run",
    "cli": "pnpm -F @albus-finance/cli run",
    "core": "pnpm -F @albus-finance/core run",
    "sdk": "pnpm -F @albus-finance/sdk run",
    "ui": "pnpm -F @albus-finance/ui run",
    "swap": "pnpm -F @albus-finance/swap-sdk run",
    "transfer": "pnpm -F @albus-finance/transfer-sdk run",
    "docs": "docsify serve ./docs",
    "test:e2e": "pnpm -F @albus-finance/tests run test",
    "test:unit": "vitest --dir ./packages",
    "lint:fix": "eslint --fix .",
    "syncpack": "syncpack list-mismatches",
    "postinstall": "npx simple-git-hooks"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.21.2",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@commitlint/config-pnpm-scopes": "^19.1.0",
    "@types/node": "^20.0.0",
    "@vitest/ui": "^1.6.0",
    "buffer": "^6.0.3",
    "docsify-cli": "^4.4.4",
    "eslint": "^9.6.0",
    "lint-staged": "^15.2.7",
    "simple-git-hooks": "^2.11.1",
    "syncpack": "^12.3.3",
    "tsup": "^8.1.0",
    "typescript": "^5.5.3",
    "vite": "^5.3.2",
    "vite-plugin-dts": "^3.9.1",
    "vite-plugin-node-polyfills": "^0.22.0",
    "vitest": "^1.6.0"
  },
  "trustedDependencies": [
    "@albus-finance/cli"
  ],
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@babel/runtime",
        "@solana/web3.js",
        "react",
        "react-native",
        "react-dom",
        "rollup",
        "esbuild",
        "snarkjs"
      ]
    }
  },
  "resolutions": {
    "circom_tester": "0.0.20",
    "ffjavascript": "0.2.63"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "pnpm run lint:fix"
  }
}
