{
  "private": true,
  "license": "AGPL-3.0",
  "scripts": {
    "cli": "pnpm -F @mfactory-lab/albus-cli run cli",
    "cli:run": "pnpm -F @mfactory-lab/albus-cli run run",
    "dev": "pnpm -r --parallel --filter=./packages/** run dev",
    "docs": "docsify serve ./docs",
    "ui:dev": "pnpm -F @albus/ui serve",
    "gen:sdk": "pnpm -F @mfactory-lab/albus-sdk generate && eslint --fix --ext .ts ./packages/albus-sdk",
    "build:core": "pnpm -F @mfactory-lab/albus-core build",
    "build:sdk": "pnpm -F @mfactory-lab/albus-sdk build",
    "build:cli": "pnpm -F @mfactory-lab/albus-cli build",
    "build:transfer": "pnpm -F @mfactory-lab/albus-transfer-sdk build",
    "build:swap": "pnpm -F @mfactory-lab/albus-swap-sdk build",
    "release:core": "pnpm -F @mfactory-lab/albus-core release",
    "release:sdk": "pnpm -F @mfactory-lab/albus-sdk release",
    "release:transfer": "pnpm -F @mfactory-lab/albus-transfer-sdk release",
    "release:swap": "pnpm -F @mfactory-lab/albus-swap-sdk release",
    "test:unit": "vitest --dir ./packages",
    "test:e2e": "pnpm -F @albus/tests run test",
    "lint:fix": "eslint --fix --ext .js,.vue,.ts ./packages",
    "changeset": "changeset",
    "commit": "git-cz",
    "syncpack": "syncpack fix-mismatches"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.42.0",
    "@changesets/cli": "^2.26.0",
    "@esbuild-plugins/node-globals-polyfill": "^0.2.3",
    "@rollup/plugin-inject": "^5.0.5",
    "@types/node": "^20.0.0",
    "@vitest/ui": "^0.34.6",
    "buffer": "^6.0.3",
    "docsify-cli": "^4.4.4",
    "eslint": "^8.52.0",
    "syncpack": "^11.2.1",
    "typescript": "5.2.2",
    "vite": "^4.5.0",
    "vite-plugin-dts": "^3.6.1",
    "vitest": "0.34.6"
  },
  "packageManager": "pnpm@8.6.2",
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@babel/runtime",
        "@solana/web3.js",
        "react",
        "react-native",
        "react-dom",
        "rollup",
        "esbuild",
        "snarkjs"
      ]
    }
  }
}
