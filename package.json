{
  "name": "@albus/monorepo",
  "version": "0.0.0",
  "license": "AGPL-3.0",
  "packageManager": "pnpm@8.6.2",
  "private": true,
  "engines": {
    "node": ">=16",
    "pnpm": ">=8"
  },
  "scripts": {
    "sdk:gen": "pnpm -F @albus/sdk generate && pnpm run lint:fix",
    "cli": "pnpm -F @albus/cli run cli",
    "dev": "NODE_OPTIONS=\"--max-old-space-size=8192\" pnpm -r --parallel --filter='./packages/**' run dev",
    "test:unit": "vitest --dir ./packages",
    "test:e2e": "pnpm -F @albus/tests run test",
    "lint:fix": "eslint --fix --ext .js,.vue,.ts ./packages",
    "changeset": "changeset",
    "release": "changeset publish",
    "commit": "git-cz"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.40.0",
    "@changesets/cli": "^2.26.0",
    "@rollup/plugin-inject": "^5.0.3",
    "@types/node": "^20.0.0",
    "@vitest/ui": "^0.33.0",
    "eslint": "^8.46.0",
    "typescript": "^5.1.6",
    "vite": "^4.4.8",
    "vitest": "^0.34.0",
    "unbuild": "^1.2.1"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@solana/web3.js",
        "rollup",
        "snarkjs",
        "jest",
        "vue",
        "vite"
      ]
    }
  }
}
