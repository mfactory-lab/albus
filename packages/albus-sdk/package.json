{
  "name": "@mfactory-lab/albus-sdk",
  "version": "0.0.29",
  "description": "Albus Protocol SDK",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/mfactory-lab/albus.git",
    "directory": "packages/albus-sdk"
  },
  "sideEffects": false,
  "main": "./dist/index.cjs.js",
  "module": "./dist/index.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.cjs.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build",
    "generate": "DEBUG='(solita|rustbin):(info|error)' solita",
    "release": "release-it",
    "release:ci": "release-it --ci",
    "test": "vitest"
  },
  "dependencies": {
    "@mfactory-lab/albus-core": "0.0.9",
    "@coral-xyz/anchor": "^0.28.0",
    "@metaplex-foundation/beet": "^0.7.1",
    "@metaplex-foundation/beet-solana": "^0.4.0",
    "@metaplex-foundation/mpl-token-metadata": "^2.13.0",
    "@solana/web3.js": "^1.77.3",
    "lodash-es": "^4.17.21"
  },
  "devDependencies": {
    "@metaplex-foundation/solita": "^0.20.0"
  },
  "peerDependencies": {
    "snarkjs": "*"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com",
    "access": "public"
  },
  "release-it": {
    "hooks": {
      "after:bump": "pnpm build"
    },
    "github": {
      "release": false
    },
    "git": false,
    "_git": {
      "commitMessage": "chore(sdk): release v${version}",
      "push": true,
      "commit": true,
      "requireCommits": false,
      "requireCleanWorkingDir": false
    },
    "_plugins": {
      "@release-it/conventional-changelog": {
        "preset": {
          "name": "conventionalcommits",
          "types": [
            {
              "type": "feat",
              "scope": "vry",
              "section": "Features üéâ"
            },
            {
              "type": "fix",
              "scope": "vry",
              "section": "Bug Fixes üêõ"
            },
            {
              "type": "misc",
              "scope": "vry",
              "section": "Miscellaneous ü¶æ"
            }
          ]
        },
        "ignoreRecommendedBump": true
      }
    }
  }
}
