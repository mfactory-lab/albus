{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "types": [
      "node",
      "mocha"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ],
    "lib": ["dom", "esnext"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowJs": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "packages/**/*.ts",
    "tests/**/*.ts"
  ],
  "exclude": ["packages/*/dist"]
}
